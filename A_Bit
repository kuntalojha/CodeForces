// Problem Tages: implementation *800

#include<bits/stdc++.h>
using namespace std;
 
int main()
{
    int t,count=0;
    cin>>t;
    while(t--)
    {
    	string c;
    	cin>>c;
    	if(c=="++X" || c=="X++" || c=="++x" || c=="x++")
    	{
    		count++;
    	}else if(c=="--X" || c=="X--" || c=="--x" || c=="x--")
    	{
    		count--;
    	}
    }
    cout<<count;
    return 0;
}
